<vs:DialogWindow x:Class="Quick_Solutions_Start_Page_v2_0Control.Settings"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:vs="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.10.0"
                 Title="Settings"
                 Height="400"
                 Loaded="DialogWindow_Loaded"
                 Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   FontSize="20"
                   Text="Enter paths 1 per line (Title | Path)"
                   Margin="5"></TextBlock>
        <TextBox x:Name="txtPaths"
                 FontSize="20"
                 Grid.Row="1"
                 AcceptsReturn="True"
                 Margin="5">

        </TextBox>

        <Button x:Name="btnSave"
                Click="btnSave_Click"
                FontSize="20"
                Content="Save"
                Grid.Row="2"
                HorizontalAlignment="Right"
                Margin="5">

        </Button>
    </Grid>
</vs:DialogWindow>
